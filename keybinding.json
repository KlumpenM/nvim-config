// Place your key bindings in this file to override the defaults
[
    // NAVIGATION
    // Focus the next buffer of terminal, when we have an open terminal
    {
        "key": "ctrl+shift+a",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    // Focus the previous buffer of terminal, when we have an open terminal
    {
        "key": "ctrl+shift+b",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus"
    },
    // Toggle the terminal panel
    {
        "key": "ctrl+shift+j",
        "command": "workbench.action.togglePanel"
    },
    // Create a new terminal
    {
        "key": "ctrl+shift+n",
        "command": "workbench.action.terminal.new",
        "when": "terminalFocus"
    },
    // Kill the current terminal
    {
        "key": "ctrl+shift+w",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },

    // FILE TREE
    // Toggle the side bar file tree
    {
        "command": "workbench.action.toggleSidebarVisibility",
        "key": "ctrl+e",
    },
    // Focus on the file tree
    {
        "key": "ctrl+e",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "editorTextFocus"
    },
    // Create a new file in the file tree
    {
        "key": "n",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus && !inputFocus"
    }, 
    // Rename a file in the file tree
    {
        "key": "r",
        "command": "renameFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // Create a new folder in the file tree
    {
        "key": "shift+n",
        "command": "explorer.newFolder",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // Delete an entry in the file tree:
    {
        "key": "d",
        "command": "deleteFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
]
